do_install(){

	vmkdir /opt/${pkgname}
	vmkdir /usr/bin
	vcopy * /opt/${pkgname}
	ln -sf /opt/${pkgname}/Exodus ${DESTDIR}/usr/bin/${pkgname}
	vlicense LICENSE

}
