do_install() {
	vmkdir /opt/gitkraken
	vcopy "*" /opt/gitkraken/
	vinstall ${FILESDIR}/GitKraken.desktop 644 /usr/share/applications/
	vinstall ${FILESDIR}/gitkraken.sh 755 /usr/bin/ gitkraken
}
