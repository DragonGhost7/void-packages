# Template file for 'python3-qstylizer'
pkgname=python3-qstylizer
version=0.2.1
revision=1
wrksrc="qstylizer-${version}"
build_style=python3-module
hostmakedepends="python3-setuptools"
makedepends="python3 python3-pbr"
depends="python3-inflection python3-tinycss2"
checkdepends="python3-pytest python3-pytest-mock ${depends}"
short_desc="Qt stylesheet generation utility for PyQt/PySide"
maintainer="DragonGhost7 <darkiridiumghost@gmail.com>"
license="MIT"
homepage="https://github.com/blambright/qstylizer"
distfiles="${homepage}/archive/refs/tags/${version}.tar.gz"
checksum=1f6d29207f7dc3644fd2270cc6ebce2f764d6017c66cb300d725abd1725e74b1

pre_build() {
	export PBR_VERSION=${version}
}

do_check() {
	export PBR_VERSION=${version}
	python3 -m pytest
}

pre_install() {
	export PBR_VERSION=${version}
}

post_install() {
vlicense LICENSE.txt
}
